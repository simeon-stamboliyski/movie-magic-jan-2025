<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{genre}}</p>
                        <p class="card-director">Director: {{director}}</p>
                        
                    </div>
                    <div class="second-info">
                        
                        <p class="card-year">Year: {{year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{rating}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{description}}</p>
                <p class="card-category">Category: Movie</p>
                <div style="display: flex; justify-content: center;">
                    <a href="/casts/{{_id}}/attach" class="details">Attach</a>
                </div>
            </div>
        </div>
        <div class="card_right">
            <img src="{{imageUrl}}"
                alt="{{title}}">
        </div>
    </div>

    <div class="main-cast-card">
        {{#each casts}}
            <div class="cast-card">
                <div class="card-img">
                    <img src="{{imageUrl}}"
                        alt="{{name}}">
                </div>
                <div class="cast-info">
                    <h1>{{name}}</h1>
                    <h3>Age: {{age}}</h3>
                    <h3>Born: {{born}}</h3>
                    <h3>Name in Movie:</h3>
                </div>
            </div>
        {{/each}}
    </div>

</section>